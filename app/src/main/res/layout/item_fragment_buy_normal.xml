<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/buy_rl_item"
    android:layout_width="540px"
    android:layout_height="200dp"
    android:clickable="true"
    app:cardCornerRadius="5dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_view_big_normal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/noti_img_pic"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/bottom_main_press"/>
            <TextView
                android:id="@+id/noti_txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:maxLines="2"
                android:textSize="14sp"
                android:text="苹果（Apple）iPhone 6 A1586 64G版 4G手机"
                android:textColor="@color/darkgray"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/h_btn"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/h_btn"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="揭晓进度"
                        android:textSize="12sp"
                        android:src="@drawable/dot_focus"/>
                    <ProgressBar
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:progress="80"
                        android:progressDrawable="@color/white"
                        style="@style/red_stroke_red_txt_btn"/>
                </LinearLayout>
                <TextView
                    style="@style/red_stroke_red_txt_btn"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="加入清单"
                    android:layout_height="28dp">

                </TextView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>