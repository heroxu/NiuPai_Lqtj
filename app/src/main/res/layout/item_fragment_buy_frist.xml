<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.rxjava_niupai_lqtj.myui.view.Kanner
        android:id="@+id/fragment_buy_kanner"
        android:layout_width="match_parent"
        android:layout_height="135dp">
    </com.rxjava_niupai_lqtj.myui.view.Kanner>
    <LinearLayout
        android:background="@drawable/bg_banner_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="@dimen/h_btn"
                android:layout_height="@dimen/h_btn"
                android:src="@drawable/bottom_main_press"/>
            <TextView
                android:text="分类"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="@dimen/h_btn"
                android:layout_height="@dimen/h_btn"
                android:src="@drawable/bottom_main_press"/>
            <TextView
                android:text="分类"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="@dimen/h_btn"
                android:layout_height="@dimen/h_btn"
                android:src="@drawable/bottom_main_press"/>
            <TextView
                android:text="分类"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="@dimen/h_btn"
                android:layout_height="@dimen/h_btn"
                android:src="@drawable/bottom_main_press"/>
            <TextView
                android:text="分类"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_btn"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/cb_checked"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="恭喜您中奖了，赶紧购买吧恭"
            android:textSize="12sp"
            android:textColor="@color/darkgray"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/theme_btn_white_press"/>
    <LinearLayout
        android:background="@drawable/bg_banner_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_btn"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="人气"
            android:textColor="@color/theme_btn_red"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="最新"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="进度"
            android:textSize="15sp"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/fragment_buy_txt_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="总需人次"
                android:textSize="15sp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:rotation="90"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/fragment_buy_txt_all"
                android:layout_alignTop="@id/fragment_buy_txt_all"
                android:src="@drawable/img_back_normal"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:rotation="270"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/fragment_buy_txt_all"
                android:layout_alignBottom="@id/fragment_buy_txt_all"
                android:src="@drawable/img_back_normal"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>