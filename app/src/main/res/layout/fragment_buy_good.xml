<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_btn">
        <TextView
            android:id="@+id/fragment_buy_txt_title"
            android:gravity="center"
            android:background="@color/theme_btn_red"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_btn"
            android:text="零钱淘金"/>
        <ImageView
            android:id="@+id/fragment_buy_img_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:layout_alignParentLeft="true"
            android:src="@drawable/img_search_normal"/>
    </RelativeLayout>
    <com.rxjava_niupai_lqtj.myui.view.RecyclerViewBaseOnPullToRefresh
        android:id="@+id/fragment_buy_rv_goods"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrDrawableEnd="@color/transparent"
        android:layout_marginBottom="5dp"/>
</LinearLayout>
